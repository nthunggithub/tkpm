				<!-- Product Slick -->
				<div class="col-md-9 col-sm-6 col-xs-6">
					<div class="row">
						<div id="product-slick-1" class="product-slick">
							<!-- Product Single -->
							{{#each products}}
							<div class="product product-single">
								
								<a href="product/{{ID_Book}}">
									<div class="product-thumb">
										<div class="product-label">
											<span>Mới</span>
											<span class="sale">Giảm {{Discount}} %</span>
										</div>
										<button class="main-btn quick-view"><i class="fa fa-search-plus"></i> Quick
											view</button>
										<img src="https://admin1712482-1712509-1712528.herokuapp.com/{{imagePath}}" alt="">
									</div>
									<div class="product-body">
										<h3 class="product-price">{{convertmoney Price Discount}} <del class="product-old-price">{{convertmoney Price 0}}</del>
										</h3>
										<div class="product-rating">
											<i class="fa fa-star"></i>
											<i class="fa fa-star"></i>
											<i class="fa fa-star"></i>
											<i class="fa fa-star"></i>
											<i class="fa fa-star-o empty"></i>
										</div>
										<h2 class="product-name"><a href="product/{{this.ID_Book}}">{{NameBook}}</a></h2>
										<div class="product-btns">
											<button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
											<a class="primary-btn add-to-cart" href="/add-to-cart/{{this.ID_Book}}/1"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
										</div>
									</div>
								</a>
								
							</div>
							{{/each}}
						</div>
					</div>
				</div>
				<!-- /Product Slick -->
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
