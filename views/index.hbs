<!-- section -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<!-- section-title -->
			<div class="col-md-12">
				<div class="section-title">
					<h2 class="title">Khuyến mãi:</h2>
					<div class="pull-right">
						<div class="product-slick-dots-1 custom-dots"></div>
					</div>
				</div>
			</div>
			<!-- /section-title -->

			<!-- banner -->
			<div class="col-md-3 col-sm-6 col-xs-6">
				<div class="banner banner-2">
					<img src="./img/bigbanner2.jpg" alt="">
					<div class="banner-caption">
						{{!-- <h2 class="white-color">Bộ sưu tập mới</h2> --}}
						<button class="primary-btn">Mua ngay</button>
					</div>
				</div>
				<div class="banner banner-2">
					<img src="./img/banner05.jpg" alt="">
				</div>
				<div class="banner banner-2">
					<img src="./img/banner06.jpg" alt="">
				</div>
			</div>
			<!-- /banner -->

			<!-- Product Slick -->
			<div class="col-md-9 col-sm-6 col-xs-6">
				<div class="row">
					<div id="product-slick-1" class="product-slick">
						<!-- Product Single -->
						{{#each products}}
						<div class="product product-single">

							<a href="product/{{ID_Book}}">
								<div class="product-thumb">
									<div class="product-label">
										<span>Mới</span>
										<span class="sale">Giảm {{Discount}} %</span>
									</div>
									<button class="main-btn quick-view"><i class="fa fa-search-plus"></i> Quick
										view</button>
									<img src="{{imagePath}}" alt="">
								</div>
								<div class="product-body">
									<h3 class="product-price">{{convertmoney Price Discount}} <del
											class="product-old-price">{{convertmoney Price 0}}</del>
									</h3>
									<div class="product-rating">
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star-o empty"></i>
									</div>
									<h2 class="product-name"><a href="product/{{this.ID_Book}}">{{NameBook}}</a></h2>
									<div class="product-btns">
										<button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
										<a class="primary-btn add-to-cart" href="/add-to-cart/{{this.ID_Book}}/1"><i
												class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
									</div>
								</div>
							</a>

						</div>
						{{/each}}
					</div>
				</div>
			</div>
			<!-- /Product Slick -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /section -->

