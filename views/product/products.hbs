<link rel="stylesheet" href="css/productfilter.css">
<!-- /BREADCRUMB -->
<!-- section -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<!-- ASIDE -->
			<div id="aside" class="col-md-3">
				<!-- aside widget -->
				<!-- /aside widget -->
				<!-- aside widget -->
				{{!-- <div class="aside">
					<h3 class="aside-title">Lọc theo tác giả</h3>
					<ul class="list-links">
						<li><a onclick="FIlter('Giới tính','Nam')">Nam</a></li>
						<li><a onclick="FIlter('Giới tính','Nu')">Nữ</a></li>
					</ul>
				</div> --}}
				<!-- /aside widget -->
				<div class="aside">
					<h3 class="aside-title">Lọc theo giá</h3>
					<ul class="list-links">
						<li><a onclick="FIlter('Gía','duoi-1-tram')">Dưới 1 trăm</a></li>
						<li><a onclick="FIlter('Gía','tu-1-tram-5-tram')">Từ 1 - 5 trăm</a></li>
						<li><a onclick="FIlter('Gía','tren-5-tram')">Trên 5 trăm</a></li>
					</ul>
				</div>
				<!-- aside widget -->
				<div class="aside">
					<h3 class="aside-title">Sắp xếp theo giá</h3>
					<ul class="list-links">
						<li><a onclick="FIlter('Sap xep','gia-giam')">Giá giảm</a></li>
						<li><a onclick="FIlter('Sap xep','gia-tang') ">Giá tăng</a></li>
					</ul>
				</div>

			</div>
			<!-- /ASIDE -->


			<!-- MAIN -->
			<div id="main" class="col-md-9">
				<!-- store top filter -->
				<div class="store-filter clearfix">
					<div class="pull-left">
						<div class="row-filter">
							<a href="#"><i class="fa fa-th-large"></i></a>
							<a href="#" class="active"><i class="fa fa-bars"></i></a>
						</div>
						<div class="sort-filter">
							<span class="text-uppercase">Lọc theo:</span>
							<select class="input" id="myBtnContainer" name="producttype">
								{{#selectproducts producttype "all1" "Tất cả thể loại"}}
								{{/selectproducts}}
								{{#each datalistcategory}}
									{{#selectproducts ../producttype NameCategory NameCategory }}
									{{/selectproducts}}
								{{/each}}
							</select>

							<a href="#" class="main-btn icon-btn"><i class="fa fa-arrow-down"></i></a>
							<select class="input" id="myBtnproducer" name="brand">
								{{#selectproducts brand "all2" "Tất cả tác giả"}}
								{{/selectproducts}}
								{{#each datalistauthor}}
									{{#selectproducts ../brand NameAuthor NameAuthor}}
									{{/selectproducts}}
								{{/each}}
							</select>
							<input type="button" value="Filter" onclick="FIlter()" />
						</div>
					</div>
				</div>
				<!-- /store top filter -->

				<!-- STORE -->
				<div id="store" id="portfoliolist">
					<!-- row -->
					{{!-- filterDiv --}}
					<div class="row">
						{{#each products}}
						<a href="product/{{ID_Book}}">
							<div class="col-md-4 col-sm-6 col-xs-6 portfolio  {{this.cat}} {{this.producer}}">
								<div class="product product-single">
									<div class="product-thumb">
										{{#ifCond 0 data.Discount}}
										{{else}}
										<div class="product-label">
											<span>Mới</span>
											<span class="sale">Giảm {{Discount}} %</span>
										</div>
										{{/ifCond}}
										<button class="main-btn quick-view"><i class="fa fa-search-plus"></i> Quick
											view</button>
										<img src="{{imagePath}}"
											alt="">
									</div>
									<div class="product-body">
										<h3 class="product-price">{{convertmoney Price Discount}}<del
												class="product-old-price">{{convertmoney Price 0}}</del></h3>
										<div class="product-rating">
											<i class="fa fa-star"></i></br>
											<i class="fa fa-star"></i></br>
											<i class="fa fa-star"></i></br>
											<i class="fa fa-star"></i></br>
											<i class="fa fa-star-o empty"></i>
										</div>
										<div id="idname">
											<h2 class="product-name"><a href="product/{{ID_Book}}">{{NameBook}}</a></h2>
										</div>
										<div class="product-btns">
											<button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
											<a class="primary-btn add-to-cart" href="/add-to-cart/{{ID_Book}}/1"><i
													class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng</a>
										</div>
									</div>
								</div>
							</div>
						</a>
						{{/each}}
					</div>

					<!-- /row -->
				</div>
				<!-- /STORE -->

				<!-- store bottom filter -->
				<div class="store-filter clearfix text-center">
					<ul class="page-filter pagination text-center">
						{{#for total_page}}
						{{#ifCond currentpage @index}}
						<li id="pages" class="active"><a >{{@index}}</a></li>
						{{else}}
						<li id="pages"><a href="?page={{@index}}">{{@index}}</a></li>
						{{/ifCond}}
						{{/for}}
					</ul>
				</div>
				<!-- /store bottom filter -->
			</div>
			<!-- /MAIN -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /section -->