									<p>{{data.description}}</p>
								</div>
								<div id="tab2" class="tab-pane fade in">

									<div class="row">
										<div class="col-md-6">
											<div class="product-reviews">
												{{#each comments}}
												<div class="single-review">
													<div class="review-heading">
														<div><a href="#"><i class="fa fa-user-o"></i> {{name}}</a></div>
														{{!-- <div><a href="#"><i class="fa fa-clock-o"></i> 27 DEC 2017 / 8:0 PM</a></div> --}}
													</div>
													<div class="review-body">
														<p>{{comment}}</p>
													</div>
												</div>
												{{/each}}
												<ul class="reviews-pages">
													<div class="store-filter clearfix text-center">
												<ul class="page-filter pagination text-center">
													{{#for total_page}}
														{{#ifCond currentpage @index}}
															<li id="pages" class="active"><a href="?page={{@index}}" >{{@index}}</a></li>
														{{else}}
															<li id="pages"><a href="?page={{@index}}"  >{{@index}}</a></li>
														{{/ifCond}}
													{{/for}}
												</ul>
											</div>
												</ul>
											</div>
										</div>
										<div class="col-md-6">
											<h4 class="text-uppercase">Viết bình luận</h4>
											<p>Địa chỉ email của bạn sẽ không được công bố.</p>
											<form class="review-form" method="POST">
												{{#if isAuthenticated}}
												{{else}}
												<div class="form-group">
													<input class="input" type="text" placeholder="Your Name" id="name" name="name"/>
												</div>												
												{{/if}}
												{{!-- <div class="form-group">
													<input class="input" type="email" placeholder="Email Address" />
												</div> --}}
												<div class="form-group">
													<textarea class="input" placeholder="Your review" id="comment" name="comment"></textarea>
												</div>
												<input type="hidden" id="postId" value="{{postId}}" name="postId">
												{{!-- <div class="form-group">
													<div class="input-rating">
														<strong class="text-uppercase">Your Rating: </strong>
														<div class="stars">
															<input type="radio" id="star5" name="rating" value="5" /><label for="star5"></label>
															<input type="radio" id="star4" name="rating" value="4" /><label for="star4"></label>
															<input type="radio" id="star3" name="rating" value="3" /><label for="star3"></label>
															<input type="radio" id="star2" name="rating" value="2" /><label for="star2"></label>
															<input type="radio" id="star1" name="rating" value="1" /><label for="star1"></label>
														</div>
													</div>
												</div> --}}
												<button class="primary-btn" type="submit" id ="submitcomment">Submit</button>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
				<!-- /Product Details -->
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
