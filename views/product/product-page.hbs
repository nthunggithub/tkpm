			<div class="row">
				<!--  Product Details -->
				<div class="product product-details clearfix">
					<div class="col-md-6">
						<div id="product-main-view">
							<div class="product-view">
								<img src="https://admin1712482-1712509-1712528.herokuapp.com/{{data.imagePath}}" alt="">
							</div>
						</div>
						
					</div>
					<div class="col-md-6">
						<div class="product-body">
							<div class="product-label">
								<span>Mới</span>
								<span class="sale">{{data.saleoff}}</span>
							</div>
							<h2 class="product-name">{{data.productname}}</h2>
							<h3 class="product-price">{{convertmoney data.price}} <del class="product-old-price">{{convertmoney data.oldprice}}</del></h3>
							<div>
								<div class="product-rating">
									<i class="fa fa-star"></i>
